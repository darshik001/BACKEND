<%- include('../header')%>
        <!-- ============================================================== -->
        <!-- Page wrapper  -->
        <!-- ============================================================== -->
        <div class="page-wrapper">
            <!-- ============================================================== -->
            <!-- Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title">Form Basic</h4>
                        <div class="ml-auto text-right">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">add admin</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
            <!-- ============================================================== -->
            <!-- End Bread crumb and right sidebar toggle -->
            <!-- ============================================================== -->
            <!-- ============================================================== -->
            <!-- Container fluid  -->
            <!-- ============================================================== -->
            <div class="container-fluid">
                <!-- ============================================================== -->
                <!-- Start Page Content -->
                <!-- ============================================================== -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <form class="form-horizontal" action="/product/add-product" method="post" enctype="multipart/form-data">
                                <div class="card-body">
                                    <h4 class="card-title yext-center">Add Admin</h4>

                                    <div class="form-group row">
                                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Category</label>
                                        <div class="col-sm-9">
                                            <select name="categoryid" id="categoryid" class="form-control">
                                                <option value="">Select Category</option>
                                                 <%category.forEach((cat)=>{%>
                                                    <option value="<%=cat.id%>"><%=cat.category%></option>
                                                <%})%>
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Sub Category</label>
                                        <div class="col-sm-9">
                                            <select name="subcategoryid" id="subcategoryid" class="form-control">
                                                <option value="">Select SubCategory</option>
                                                
                                            </select>
                                        </div>
                                    </div>

                                     <div class="form-group row">
                                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Extra Category</label>
                                        <div class="col-sm-9">
                                            <select name="extracategoryid" id="extracategoryid" class="form-control">
                                                <option value="">Select ExtraCategory</option>
                                                
                                            </select>
                                        </div>
                                    </div>

                                    <div class="form-group row">
                                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Name</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control"  name="title" placeholder="Product Name Here">
                                        </div>
                                    </div>
                            
                                    <div class="form-group row">
                                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Price</label>
                                        <div class="col-sm-9">
                                            <input type="text" class="form-control"  name="price" placeholder="Product Price Here">
                                        </div>
                                    </div>

                                     <div class="form-group row">
                                        <label for="fname" class="col-sm-3 text-right control-label col-form-label">Description</label>
                                        <div class="col-sm-9">
                                            <textarea class="form-control" name="Description" placeholder="Product Description Here"></textarea>
                                        </div>
                                    </div>

                                     <div class="form-group row">
                                        <label for="cono1" class="col-sm-3 text-right control-label col-form-label">Prodcut Image</label>
                                        <div class="col-sm-9">
                                            <input type="file" class="form-control" id="cono1" name="productImage">
                                        </div>
                                    </div>
                                  
                                    
                                </div>
                                <div class="border-top text-center">
                                    <div class="card-body ">
                                        <button type="submit" class="btn btn-primary">Submit</button>
                                    </div>
                                </div>
                            </form>
                        </div>

                      

                    </div>
                
                </div>
                <!-- editor -->
               
                <!-- ============================================================== -->
                <!-- End PAge Content -->
                <!-- ============================================================== -->
                <!-- ============================================================== -->
                <!-- Right sidebar -->
                <!-- ============================================================== -->
                <!-- .right-sidebar -->
                <!-- ============================================================== -->
                <!-- End Right sidebar -->
                <!-- ============================================================== -->
            </div>
            <!-- ============================================================== -->
            <!-- End Container fluid  -->
            <!-- ============================================================== -->
           <%- include('../footer')%>



           <script>
            let category = document.getElementById('categoryid')
            let subcategory = document.getElementById('subcategoryid')
            let extracategory = document.getElementById('extracategoryid')
            category.addEventListener('change',()=>{
                let categoryid = category.value
                subcategory.innerHTML = `<option value="">Select SubCategory</option>`
                fetch(`/product/subcategory/${categoryid}`)
                .then(res =>res.json())
                .then((data) =>{
                    data.allsubcategory.forEach((subcat)=>{
                        let option = document.createElement('option')
                        option.setAttribute('value',subcat._id)
                        option.innerHTML = subcat.subcategory
                        console.log(option)
                        subcategory.append(option)
                    })
                })
                .catch(err=>console.log(err))
            })


             subcategory.addEventListener('change',()=>{
                let subcategoryid = subcategory.value
                extracategory.innerHTML = `<option value="">Select SubCategory</option>`
                fetch(`/product/extracategory/${subcategoryid}`)
                .then(res =>res.json())
                .then((data) =>{
                    data.allextracategory.forEach((extracat)=>{
                        let option = document.createElement('option')
                        option.setAttribute('value',extracat._id)
                        option.innerHTML = extracat.extracategory
                        console.log(option)
                        extracategory.append(option)
                    })
                })
                .catch(err=>console.log(err))
            })
           </script>


